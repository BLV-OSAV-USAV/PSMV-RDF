# ==============================================================================
# PREFIXES
# ==============================================================================

# Project-specific QNames ------------------------------------------------------
@prefix : <https://agriculture.ld.admin.ch/plant-protection/> .
@prefix ghs: <https://agriculture.ld.admin.ch/plant-protection/ghs/> .

# General prefixes -------------------------------------------------------------
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# ==============================================================================
# ONTOLOGY METADATA
# ------------------------------------------------------------------------------
# Use <https://semver.org/> as a reference for version number
# ==============================================================================

: a owl:Ontology ;
    dcterms:creator "Martin Hertach",
        "Ingrid Nyfeler",
        "Damian Oswald",
        "Sara Sch√§rrer",
        "Guy Schnidrig" ;
    dcterms:title "Crop protection product ontology"@en ;
    owl:versionInfo "3.0.0" .

# ==============================================================================
# CORE PHYTOSANITARY CLASSES & PROPERTIES
# ==============================================================================

:Cultivation a owl:Class ;
    schema:name "Cultivation"@en .

:Pest a owl:Class ;
    schema:name "Pest"@en .

:ApplicationComment a owl:Class ;
    schema:name "Application comments"@en , "Anwendungskommentar"@de ;
    schema:description "Comments on how the product must be applied (dosage, etc.)"@en .

:Obligation a owl:Class ;
    schema:name "Obligation"@en .

:ApplicationArea a owl:Class ;
    schema:name "Application Area"@en .

:applicationArea a owl:ObjectProperty ;
    schema:name "Application area"@en ;
    rdfs:domain :Indication ;
    rdfs:range :ApplicationArea .

# ==============================================================================
# PERMISSION HOLDERS
# ==============================================================================

:permissionHolder a owl:ObjectProperty ;
    schema:name "Permission holder"@en ;
    rdfs:domain :Product ;
    rdfs:range schema:Organization .

# ==============================================================================
# PRODUCT TAXONOMY AND PROPERTIES (Herbicides, Insecticides etc.)
# ==============================================================================

:Product a owl:Class ;
    schema:name "Product"@en .

:ParallelImport a owl:Class ;
    schema:name "Parallel import"@en ;
    rdfs:subClassOf :Product .

:ghs a owl:ObjectProperty ;
    schema:name "GHS statement"@en ;
    rdfs:domain :Product ;
    rdfs:range ghs:GHSStatement .

:indication a owl:ObjectProperty ;
    schema:name "has indications"@en ;
    rdfs:domain :Product ;
    rdfs:range :Indication .

:ingredient a owl:ObjectProperty ;
    schema:name "Ingredient"@en ;
    rdfs:domain :Product ;
    rdfs:range :Ingredient .

# ==============================================================================
# INDICATION CLASS DEFINITION AND PROPERTIES
# ==============================================================================

:Indication a owl:Class ;
    schema:name "Indication"@en ;
    schema:alternateName "Application"@en .

:pest a owl:ObjectProperty ;
    schema:name "allowed against pests"@en ;
    rdfs:domain :Indication ;
    rdfs:range :Pest .

:cultivation a owl:ObjectProperty ;
    schema:name "allowed on cultivations"@en ;
    rdfs:domain :Indication ;
    rdfs:range :Cultivation .

:obligation a owl:ObjectProperty ;
    schema:name "Obligation"@en ;
    rdfs:domain :Indication ;
    rdfs:range :Obligation .

:applicationComment a owl:ObjectProperty ;
    schema:name "Application Comment"@en ;
    rdfs:domain :Indication ;
    rdfs:range :ApplicationComment .

# ==============================================================================
# INGREDIENTS AND SUBSTANCES
# ==============================================================================

:Ingredient a owl:Class ;
    schema:name "Ingredient"@en .

:Substance a owl:Class ;
    schema:name "Substance"@en .

:substance a owl:ObjectProperty ;
    schema:name "Substance"@en ;
    rdfs:domain :Ingredient ;
    rdfs:range :Substance .
