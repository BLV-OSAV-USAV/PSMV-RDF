@prefix : <https://agriculture.ld.admin.ch/plant-protection/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# ==============================================================================
# ONTOLOGY METADATA
# ------------------------------------------------------------------------------
# Use <https://semver.org/> as a reference for version number
# ==============================================================================

: a owl:Ontology ;
    dcterms:creator "Martin Hertach",
        "Ingrid Nyfeler",
        "Damian Oswald",
        "Sara Schärrer",
        "Guy Schnidrig" ;
    dcterms:title "Crop protection product ontology"@en ;
    owl:versionInfo "1.0.0" .

# ==============================================================================
# CORE PHYTOSANITARY CLASSES & PROPERTIES
# ==============================================================================

:Product a owl:Class ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:allValuesFrom :GHSStatements ;
        owl:onProperty :comment
    ] .

:ParallelImport a owl:Class ;
    rdfs:subClassOf :Product .

:Cultivation a owl:Class .

:Pest a owl:Class .

:Indication a owl:Class ;
    skos:altLabel "Application"@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:allValuesFrom :ApplicationComment ;
        owl:onProperty :comment
    ] .

:ApplicationComment a owl:Class ;
    rdfs:label "Anwendungskommentare (Dosierungshinweise, etc.)"@de .

:Obligation a owl:Class ;
    rdfs:label "Auflagen"@de .

:ApplicationArea a owl:Class .

:Ingredients a owl:Class .

:indication a owl:ObjectProperty ;
    rdfs:domain :Product ;
    rdfs:range :Indication .

:pest a owl:ObjectProperty ;
    rdfs:domain :Indication ;
    rdfs:range :Pest .

:cultivation a owl:ObjectProperty ;
    rdfs:domain :Indication ;
    rdfs:range :Cultivation .

:comment a owl:ObjectProperty .

# ==============================================================================
# PERMISSION HOLDERS
# ==============================================================================

:permissionHolder a owl:ObjectProperty ;
    rdfs:label "Verkaufsbewilligungshalter"@de,
        "Permission holder"@en,
        "Titulaire de l'autorisation de vente"@fr,
        "Titolare dell'autorizzazione alla vendita"@it ;
    rdfs:comment """
        Diese Eigenschaft verknüpft ein Produkt mit der Firma, die berechtigt ist, es zu verkaufen.
        """@de,
        """
        This property links a product to the company authorized to sell it.
        """@en,
        """
        Cette propriété relie un produit à l'entreprise autorisée à le vendre.
        """@fr,
        """
        Questa proprietà collega un prodotto all'azienda autorizzata a venderlo.
        """@it ;
    rdfs:domain :Product ;
    rdfs:range schema:Organization .

# ==============================================================================
# PRODUCT HAZARD CLASSIFICATION
# ==============================================================================

:GHSStatements a owl:Class .

:HazardStatement a owl:Class ;
    rdfs:label "Hazard statements"@en ;
    skos:altLabel "R-Satz"@de,
        "R phrase"@en,
        "Phrase R"@fr,
        "Frase R"@it ;
    rdfs:comment
        """
        An R phrase (= risk phrase) is a standardized description of the risks associated with hazardous chemical substances, indicating specific dangers such as toxicity or flammability.
        These were used in the European Union to denote risks on safety data sheets and labels.
        """@en ;
    rdfs:seeAlso <https://ec.europa.eu/taxation_customs/dds2/SAMANCTA/EN/Safety/RS_EN.htm>,
        <https://en.wikipedia.org/wiki/List_of_R-phrases> ;
    rdfs:subClassOf :GHSStatements .

:PrecautionaryStatement a owl:Class ;
    rdfs:label "Precautionary statements"@en ;
    skos:altLabel "Code S"@en ;
    rdfs:comment """
        A precautionary statement is a standardized safety instruction for handling hazardous chemical substances.
        These phrases were used in the European Union to recommend safe handling, storage, and emergency measures on safety data sheets and labels.
        """@en ;
    rdfs:seeAlso <https://ec.europa.eu/taxation_customs/dds2/SAMANCTA/EN/Safety/RS_EN.htm>,
        <https://en.wikipedia.org/wiki/List_of_S-phrases> ;
    rdfs:subClassOf :GHSStatements .

:HazardPictogram a owl:Class ;
    rdfs:seeAlso <https://en.wikipedia.org/wiki/GHS_hazard_pictograms> ;
    rdfs:subClassOf :GHSStatements .

# ==============================================================================
# PRODUCT TAXONOMY AND PROPERTIES (Herbicides, Insecticides etc.)
# ==============================================================================

:Product a owl:Class ;
    rdfs:subClassOf schema:Product .